umask 077

##
# Variables
##

GPG_OPTS="--quiet --yes"
STORE_DIR="${PASSWORD_STORE_DIR:-${HOME}/.password-store}"

if [ -r "${STORE_DIR}/.gpg-id" ] && [ -z "${PASSWORD_STORE_KEY}" ]; then
  read -r PASSWORD_STORE_KEY < "${STORE_DIR}/.gpg-id"
fi

##
# Helper
##

abort() {
  echo "${0}: ${1}" 1>&2
  exit 1
}

mygpg() {

  if [ -n "${PASSWORD_STORE_KEY}" ]; then
    gpg $GPG_OPTS --recipient "${PASSWORD_STORE_KEY}" "$@"
  else
    gpg $GPG_OPTS --default-recipient-self "$@"
  fi
}

readpw() {
  if [ -t 0 ]; then
    printf "%s" "${1}"
    stty -echo
  fi

  IFS= read -r "${2}"
  [ -t 0 ] && stty echo
}

##
# Commands
##

show() {
  local entry_name="${1}"
  local entry_path="${STORE_DIR}/${entry_name}.gpg"

  if [ -z "${entry_name}" ]; then
    abort "USAGE: tpm show ENTRY"
  fi

  if [ ! -e "${entry_path}" ]; then
    abort "The requested entry doesn't exist."
  fi

  mygpg --decrypt "${entry_path}"
}

insert() {
  local entry_name="${1}"
  local entry_path="${STORE_DIR}/${entry_name}.gpg"

  if [ -z "${entry_name}" ]; then
    abort "USAGE: tpm insert ENTRY"
  fi

  if [ -e "${entry_path}" ]; then
    abort "This entry already exists, please remove it first."
  fi

  password=""
  readpw "Password for '${entry_name}': " password
  if [ -t 0 ]; then
    printf "\n"
  fi

  if [ -z "${password}" ]; then
    abort "You didn't specify a password."
  fi

  mkdir -p "${entry_path%/*}"
  printf '%s\n' "${password}" | mygpg --encrypt \
    --output "${entry_path}"
}

show_all() {
	colortree -x --noreport -C "${STORE_DIR}" -P "*.gpg" --prune | sed 's/\.gpg//'
}

remove_entry() {
	local _entry_name="${1}"

	[[ -z ${_entry_name} ]] && abort "rm needs an argument"

	if [[ -e "${STORE_DIR}/${_entry_name}.gpg" ]]; then
		echo "I will remove ${_entry_name} from your password store!"
		echo "Press any key to continue or CRTL+C to abort"
		read
		rm "${STORE_DIR}/${_entry_name}.gpg"
	else
		abort "Entry does not exist"
	fi
}

find_entry() {
	local _entry_name="${1}"

	[[ -z ${_entry_name} ]] && abort "find needs an argument"
	colortree -x --noreport -C "${STORE_DIR}/" -P "*${_entry_name}*" --prune --matchdirs
	echo
}

##
# Parse input
##

if [ $# -eq 0 ]; then
	show_all
	exit 0
elif [ $# -gt 2 ]; then
  abort "tpm doesn't accept more than two arguments."
fi

[[ -d "${STORE_DIR}" ]] || abort "Password directory not-existent."

case "${1}" in
  "show")   show   "${2}" ;;
  "insert") insert "${2}" ;;
  "find")	find_entry "${2}" ;;
  "rm")		remove_entry "${2}" ;;
  *)   		show   "${1}" ;;
esac

# vim: et:sw=4:sts=4
